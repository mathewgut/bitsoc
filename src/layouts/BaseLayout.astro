---
// format all pages abide by
import Navigation from "../components/Navigation"
import "../styles/global.css";


const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title +" | BITSoc"}</title>
	</head>
	<body class="
	[&::-webkit-scrollbar]:w-1.75
	[&::-webkit-scrollbar-track]:bg-transparent
	[&::-webkit-scrollbar-thumb]:bg-bitsoc-orange
	[&::-webkit-scrollbar-thumb]:rounded-full
  ">
		
        <main class="flex scroll-smooth flex-col items-center w-full h-full pt-14">
				<Navigation client:only />
			<slot class="scroll-smooth"  />
        </main>
        
	</body>
</html>

